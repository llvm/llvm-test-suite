$SortReverse = 1;               # Sort in descending order


# Helper function
sub Ratio {
  my ($Cols, $Col) = @_;
  if ($Cols->[$Col-2] ne "*" and
      $Cols->[$Col-2] != "0") {
    return $Cols->[$Col-1]/$Cols->[$Col-2];
  } else {
    return "n/a";
  }
}

sub TypeSafeRatio {
  my ($Cols, $Col) = @_;
  my $TS = $Cols->[$Col-2];
  my $NTS = $Cols->[$Col-1];
  $TS = 0 if ($TS eq "*");
  $NTS = 0 if ($NTS eq "*");

  if ($TS + $NTS != 0) {
    return sprintf("%4.1f%%", 100*$TS/($TS+$NTS+0.0));
  } else {
    return "n/a";
  }
}

sub FormatSize {
  my $Size = shift;
  if ($Size > 10*1024*1024) {
    return (int $Size*10 / (1024*1024))/10 . "MB";
  } elsif ($Size > 10*1024) {
    return (int $Size / 1024);
  } else {
    return $Size . "B";
  }
}

sub NoStar {
  return "0" if ($_[0] eq '*');
  return $_[0];
}

sub NoCallNodes {
  $_[0] =~ m/([0-9]+)\+/;
  return $1;
}

